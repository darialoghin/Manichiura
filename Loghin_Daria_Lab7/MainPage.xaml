<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manichiura.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="mani.jpg"
                SemanticProperties.Description="Programeaza-ti o manichiura!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Image
                Source="salon.jpg"
                SemanticProperties.Description="salon"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Make your nails perfect!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Bine ati venit la Nail Salon District!"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Programeaza-te!"
                FontSize="18"
                HorizontalOptions="Center" />

            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
